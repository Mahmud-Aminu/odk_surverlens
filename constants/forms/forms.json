{
  "forms": [
    {
      "id": "afp_f001",
      "title": "AFP Immediate Case Notification Form",
      "version": "1.0",
      "description": "Acute Flaccid Paralysis Surveillance System - Immediate AFP Case Notification Form",
      "fields": [
        {
          "type": "group",
          "name": "step_1_patient_id",
          "label": "Step 1: Patient Identification",
          "appearance": "field-list",
          "fields": [
            {
              "type": "text",
              "name": "child_name",
              "label": "1. Name of Child with AFP",
              "required": true
            },
            {
              "type": "select_one",
              "name": "sex",
              "label": "2. Sex",
              "required": true,
              "choices": [
                {
                  "value": "male",
                  "label": "Male"
                },
                {
                  "value": "female",
                  "label": "Female"
                }
              ]
            },
            {
              "type": "date",
              "name": "date_of_birth",
              "label": "3. Date of Birth",
              "required": true
            },
            {
              "type": "integer",
              "name": "age_years",
              "label": "4. Age (Years)",
              "min": 0,
              "max": 15
            },
            {
              "type": "integer",
              "name": "age_months",
              "label": "Age (Months)",
              "min": 0,
              "max": 180
            },
            {
              "type": "text",
              "name": "father_name",
              "label": "5. Father's Name",
              "required": true
            },
            {
              "type": "text",
              "name": "mother_name",
              "label": "6. Mother's Name",
              "required": true
            }
          ]
        },
        {
          "type": "group",
          "name": "step_2_address",
          "label": "Step 2: Geographic Location",
          "appearance": "field-list",
          "fields": [
            {
              "type": "text",
              "name": "child_address",
              "label": "7. Address of Child",
              "required": true,
              "inputType": "multiline"
            },
            {
              "type": "text",
              "name": "village_city",
              "label": "8. Village/City",
              "required": true
            },
            {
              "type": "text",
              "name": "address_lga",
              "label": "LGA of Residence",
              "required": true
            },
            {
              "type": "text",
              "name": "permanent_address",
              "label": "9. Permanent Address (if different)",
              "inputType": "multiline"
            }
          ]
        },
        {
          "type": "group",
          "name": "step_3_clinical",
          "label": "Step 3: Clinical & Hospitalization",
          "appearance": "field-list",
          "fields": [
            {
              "type": "select_one",
              "name": "is_hospitalized",
              "label": "10. Is the Child Hospitalized?",
              "required": true,
              "choices": [
                {
                  "value": "yes",
                  "label": "Yes"
                },
                {
                  "value": "no",
                  "label": "No"
                }
              ]
            },
            {
              "type": "date",
              "name": "hospitalization_date",
              "label": "11. Date of Hospitalization",
              "relevant": "${is_hospitalized} = 'yes'"
            },
            {
              "type": "text",
              "name": "hospital_ward",
              "label": "12. Hospital Ward",
              "relevant": "${is_hospitalized} = 'yes'"
            }
          ]
        },
        {
          "type": "group",
          "name": "step_4_notification_action",
          "label": "Step 4: Notification & Action Taken",
          "appearance": "field-list",
          "fields": [
            {
              "type": "date",
              "name": "paralysis_onset_date",
              "label": "Date of onset of Paralysis",
              "required": true
            },
            {
              "type": "date",
              "name": "notification_date_recorded",
              "label": "Date of Notification",
              "required": true
            },
            {
              "type": "text",
              "name": "notified_by",
              "label": "Notified by: (Name and Sign)",
              "required": true
            },
            {
              "type": "group",
              "name": "action_taken",
              "label": "Action Taken",
              "fields": [
                {
                  "type": "select_one",
                  "name": "inform_mother_stool",
                  "label": "1. Inform Mother about Stool collection",
                  "choices": [
                    {
                      "value": "yes",
                      "label": "Yes"
                    },
                    {
                      "value": "no",
                      "label": "No"
                    }
                  ]
                },
                {
                  "type": "select_one",
                  "name": "confirm_address",
                  "label": "2. Confirm Address of the Child",
                  "choices": [
                    {
                      "value": "yes",
                      "label": "Yes"
                    },
                    {
                      "value": "no",
                      "label": "No"
                    }
                  ]
                },
                {
                  "type": "text",
                  "name": "other_actions",
                  "label": "3. Others",
                  "inputType": "multiline"
                }
              ]
            }
          ]
        },
        {
          "type": "group",
          "name": "step_5_Focal_Person",
          "label": "Step 5: Focal Person Name",
          "appearance": "field-list",
          "fields": [
            {
              "type": "date",
              "name": "notification_date",
              "label": "Date",
              "required": true
            },
            {
              "type": "text",
              "name": "FP_name",
              "label": "Focal Person Name",
              "required": true
            },
            {
              "type": "text",
              "name": "FP_signature",
              "label": "Focal Person Signature",
              "required": true
            }
          ]
        }
      ],
      "metadata": {
        "instanceName": "AFP Case - ${child_name}",
        "submissionUrl": "/afp/submit"
      }
    },
    {
      "id": "afp_f002",
      "title": "Health Facilities Active Surveillance Form",
      "version": "1.0",
      "description": "Form AFP-F002 - Health Facilities Active Surveillance",
      "fields": [
        {
          "type": "text",
          "name": "state",
          "label": "State",
          "required": true
        },
        {
          "type": "text",
          "name": "lga",
          "label": "LGA",
          "required": true
        },
        {
          "type": "text",
          "name": "health_facility_name",
          "label": "Name of Health Facility",
          "required": true
        },
        {
          "type": "text",
          "name": "month",
          "label": "Month",
          "required": true
        },
        {
          "type": "date",
          "name": "week_beginning",
          "label": "Week Beginning",
          "required": true
        },
        {
          "type": "integer",
          "name": "week_no",
          "label": "Week No",
          "required": true
        },
        {
          "type": "repeat",
          "name": "surveillance_visits",
          "label": "Surveillance Visits",
          "fields": [
            {
              "type": "text",
              "name": "unit_ward",
              "label": "Unit or Ward Visits",
