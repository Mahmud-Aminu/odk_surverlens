        },
        {
          "type": "date",
          "name": "completion_date",
          "label": "Date",
          "required": true
        }
      ]
    },
    {
      "id": "idsr_001b",
      "title": "Lab Specimen Collection/Reporting Form",
      "version": "1.0",
      "description": "For Immediate Case-based Surveillance IDSR 001B",
      "fields": [
        {
          "type": "group",
          "name": "step_1_specimen_collection",
          "label": "Step 1: Specimen Collection Information",
          "appearance": "field-list",
          "fields": [
            {
              "type": "text",
              "name": "lab_name",
              "label": "1. Lab Specimen Collected/Tested",
              "required": true
            },
            {
              "type": "text",
              "name": "health_facility",
              "label": "2. Reporting Health Facility",
              "required": true
            },
            {
              "type": "date",
              "name": "specimen_collection_date",
              "label": "3. Date of Specimen Collection",
              "required": true
            },
            {
              "type": "select_multiple",
              "name": "specimen_type",
              "label": "4. Type of Specimen",
              "required": true,
              "choices": [
                { "value": "stool", "label": "Stool" },
                { "value": "blood", "label": "Blood" },
                { "value": "csf", "label": "CSF" },
                { "value": "other", "label": "Other (Specify)" }
              ]
            },
            {
              "type": "text",
              "name": "specimen_type_other",
              "label": "5. Other Specimen Type (Specify)",
              "relevant": "selected(${specimen_type}, 'other')",
              "inputType": "multiline"
            },
            {
              "type": "text",
              "name": "id_number",
              "label": "6. ID Number",
              "required": true
            }
          ]
        },
        {
          "type": "group",
          "name": "step_2_lab_processing",
          "label": "Step 2: Laboratory Processing",
          "appearance": "field-list",
          "fields": [
            {
              "type": "date",
              "name": "lab_test_date",
              "label": "7. Date Lab Received Specimen"
            },
            {
              "type": "select_one",
              "name": "specimen_condition",
              "label": "8. Specimen Condition",
              "choices": [
                { "value": "adequate", "label": "Adequate" },
                { "value": "not_adequate", "label": "Not Adequate" }
              ]
            },
            {
              "type": "text",
              "name": "examiner_condition",
              "label": "9. Examiner/Condition"
            },
            {
              "type": "select_one",
              "name": "test_type",
              "label": "10. Type of Test",
              "choices": [
                { "value": "culture", "label": "Culture" },
                { "value": "microscopy", "label": "Microscopy" },
                { "value": "serology", "label": "Serology" },
                { "value": "pcr", "label": "PCR" }
              ]
            }
          ]
        },
        {
          "type": "group",
          "name": "step_3_test_results",
          "label": "Step 3: Test Results",
          "appearance": "field-list",
          "fields": [
            {
              "type": "select_one",
              "name": "malaria",
              "label": "1. Malaria (P. falciparum / P. Vivax)",
              "choices": [
                { "value": "positive", "label": "Positive" },
                { "value": "negative", "label": "Negative" },
                { "value": "pending", "label": "Pending" }
              ]
            },
            {
              "type": "select_one",
              "name": "cholera",
              "label": "2. Cholera",
              "choices": [
                { "value": "positive", "label": "Positive" },
                { "value": "negative", "label": "Negative" }
              ]
            },
            {
              "type": "text",
              "name": "meningitis_h",
              "label": "3. Meningitis - N. meningitidis (Culture/Latex/Gram stain)"
            },
            {
              "type": "text",
              "name": "meningitis_s",
              "label": "4. Meningitis - S. pneumoniae (Culture/Latex/Gram stain)"
            },
            {
              "type": "text",
              "name": "meningitis_hi",
              "label": "5. Meningitis - H. influenzae (Culture/Latex/Gram stain)"
            },
            {
              "type": "select_one",
              "name": "shigella_dysenteriae",
              "label": "6. Shigella dysenteriae",
              "choices": [
                { "value": "sd_type_1", "label": "SD Type 1" },
                { "value": "other_shigella", "label": "Other Shigella Types" },
                { "value": "positive", "label": "Positive" },
                { "value": "negative", "label": "Negative" },
                { "value": "no_shigella", "label": "No Shigella" },
                { "value": "is_isolate", "label": "Isolate" },
                { "value": "forthcoming", "label": "Forthcoming" }
              ]
            },
            {
              "type": "group",
              "name": "viral_detection",
              "label": "7. Viral Detection",
              "fields": [
                {
                  "type": "select_one",
                  "name": "yellow_fever",
                  "label": "Yellow Fever",
                  "choices": [
                    { "value": "positive", "label": "Positive" },
                    { "value": "negative", "label": "Negative" }
                  ]
                },
                {
                  "type": "select_one",
                  "name": "measles",
                  "label": "Measles (IgM)",
                  "choices": [
                    { "value": "positive", "label": "Positive" },
                    { "value": "negative", "label": "Negative" }
                  ]
                },
                {
                  "type": "select_one",
                  "name": "rubella",
                  "label": "Rubella (IgM)",
                  "choices": [
                    { "value": "positive", "label": "Positive" },
                    { "value": "negative", "label": "Negative" }
                  ]
                },
                {
                  "type": "select_one",
                  "name": "dengue",
                  "label": "Dengue",
                  "choices": [
                    { "value": "positive", "label": "Positive" },
                    { "value": "negative", "label": "Negative" }
                  ]
                },
                {
                  "type": "select_one",
                  "name": "ebola",
                  "label": "Ebola",
                  "choices": [
                    { "value": "positive", "label": "Positive" },
                    { "value": "negative", "label": "Negative" }
                  ]
                },
                {
                  "type": "select_one",
                  "name": "lassa",
                  "label": "Lassa (IgM)",
                  "choices": [
                    { "value": "positive", "label": "Positive" },
                    { "value": "negative", "label": "Negative" }
                  ]
                },
                {
                  "type": "select_one",
                  "name": "marburg",
                  "label": "Marburg (IgM)",
                  "choices": [
                    { "value": "positive", "label": "Positive" },
                    { "value": "negative", "label": "Negative" }
                  ]
                },
                {
                  "type": "select_one",
                  "name": "avian_influenza",
                  "label": "Avian Influenza (H5N1 RT-PCR)",
                  "choices": [
                    { "value": "positive", "label": "Positive" },
                    { "value": "negative", "label": "Negative" }
                  ]
                }
              ]
            },
            {
              "type": "text",
              "name": "other_lab_test",
              "label": "8. Other Lab Test (Specify)",
              "inputType": "multiline"
            }
          ]
        },
        {
          "type": "group",
          "name": "step_4_results_submission",
          "label": "Step 4: Results Submission & Confirmation",
          "appearance": "field-list",
          "fields": [
            {
              "type": "date",
              "name": "results_sent_date",
              "label": "1. Date Form and Results Sent",
              "required": true
            },
            {
              "type": "text",
              "name": "lab_sending_results",
              "label": "2. Name of Lab Sending Results"
            },
            {
              "type": "text",
              "name": "other_pending_results",
              "label": "3. Other Pending Results",
              "inputType": "multiline"
            },
            {
              "type": "text",
              "name": "lab_technician_name",
              "label": "4. Name of Lab Technician",
              "required": true
            },
            {
              "type": "text",
              "name": "lab_technician_signature",
              "label": "5. Signature",
              "required": true
            },
            {
              "type": "date",
              "name": "ida_received_date",
              "label": "6. Date IDA/Receiver Received Test Results"
            },
            {
              "type": "date",
              "name": "results_sent_to_facility",
              "label": "7. Date Results Sent to Health Facility"
            },
            {
              "type": "date",
              "name": "results_received_by_facility",
              "label": "8. Date Results Received at Health Facility"
            }
          ]
        }
      ],
      "metadata": {
        "instanceName": "Lab Report - ${id_number}",
        "submissionUrl": "/idsr/lab/submit"
      }
    },
    {
      "id": "idsr_001c",
      "title": "Line List - Reporting from Health Facility to LGA",
      "version": "1.0",
      "description": "IDSR 001C - Line list for reporting from health facility to LGA and for use during outbreaks",
      "fields": [
        {
          "type": "group",
          "name": "step_1_reporting_information",
          "label": "Step 1: Reporting Information",
          "appearance": "field-list",
          "fields": [
            {
              "type": "text",
              "name": "state",
              "label": "1. State",
              "required": true
            },
            {
              "type": "text",
              "name": "lga",
              "label": "2. LGA",
              "required": true
            },
            {
              "type": "text",
              "name": "health_facility",
              "label": "3. Reporting Health Facility",
              "required": true
            },
            {
              "type": "text",
              "name": "ward_name",
              "label": "4. Ward Name",
              "required": true
            },
            {
              "type": "integer",
              "name": "reporting_week",
              "label": "5. Reporting Week (Date received at LGA)",
              "required": true,
              "min": 1,
              "max": 53
            },
            {
              "type": "integer",
              "name": "year",
              "label": "6. Year",
              "required": true,
              "min": 2000
            }
          ]
        },
        {
          "type": "group",
          "name": "step_2_patient_line_list",
          "label": "Step 2: Patient Line List",
          "appearance": "field-list",
          "fields": [
            {
              "type": "repeat",
              "name": "patient_records",
              "label": "Patient Records",
              "fields": [
                {
                  "type": "integer",
                  "name": "serial_number",
                  "label": "1. Serial Number (S/N)",
                  "required": true,
                  "min": 1
                },
                {
                  "type": "text",
                  "name": "patient_id",
                  "label": "2. Case ID or Outbreak Number",
                  "required": true
                },
                {
                  "type": "text",
                  "name": "patient_name",
                  "label": "3. Name of Patient",
                  "required": true
                },
                {
                  "type": "integer",
                  "name": "age",
                  "label": "4. Age",
                  "min": 0
                },
                {
                  "type": "select_one",
                  "name": "sex",
                  "label": "5. Sex",
                  "choices": [
                    { "value": "male", "label": "Male" },
                    { "value": "female", "label": "Female" }
                  ]
                },
                {
                  "type": "text",
                  "name": "village",
                  "label": "6. Village / Town / Neighborhood / Ward",
                  "required": true
                },
                {
                  "type": "date",
                  "name": "date_seen",
                  "label": "7. Date Seen / Date Received at LGA"
                },
                {
                  "type": "text",
                  "name": "disease",
                  "label": "8. Disease"
                },
                {
                  "type": "select_one",
                  "name": "lab_confirmed",
                  "label": "9. Lab Confirmed Case",
                  "choices": [
                    { "value": "yes", "label": "Yes" },
                    { "value": "no", "label": "No" },
                    { "value": "pending", "label": "Pending" }
                  ]
                },
                {
                  "type": "select_one",
                  "name": "outcome",
                  "label": "10. Outcome",
                  "choices": [
                    { "value": "alive", "label": "Alive" },
                    { "value": "dead", "label": "Dead" }
                  ]
                },
                {
                  "type": "text",
                  "name": "comments",
                  "label": "11. Comments",
                  "inputType": "multiline"
                }
              ]
            }
          ]
        }
      ],
      "metadata": {
        "instanceName": "IDSR Line List - ${health_facility} - Week ${reporting_week}",
        "submissionUrl": "/idsr/line-list/submit"
      }
    },
    {
      "id": "idsr_001a",
      "title": "Immediate Case-Based Reporting Form",
      "version": "1.0",
      "description": "Event / Immediate / Case-based Surveillance Reporting Form IDSR 001A",
      "fields": [
        {
          "type": "group",
          "name": "step_1_reporting_info",
          "label": "Step 1: Reporting Information",
          "appearance": "field-list",
          "fields": [
            {
              "type": "text",
              "name": "reporting_health_facility",
              "label": "1. Reporting Health Facility",
              "required": true
            },
            {
              "type": "text",
              "name": "identification_number",
              "label": "2. Identification Number",
              "required": true
            },
            {
              "type": "date",
              "name": "form_received_date",
              "label": "3. Date form received at SMOH or the national level",
              "required": true
            }
          ]
        },
        {
          "type": "group",
          "name": "step_2_disease_information",
          "label": "Step 2: Disease Information",
          "appearance": "field-list",
          "fields": [
            {
              "type": "select_multiple",
              "name": "diseases",
              "label": "4. Select Disease(s)",
              "required": true,
              "choices": [
                { "value": "cholera", "label": "Cholera" },
                { "value": "dracunculiasis", "label": "Dracunculiasis" },
                { "value": "neonatal_tetanus", "label": "Neonatal Tetanus" },
                { "value": "measles", "label": "Measles" },
                { "value": "meningitis", "label": "Meningitis" },
                { "value": "hpai", "label": "HPAI" },
                {
                  "value": "viral_hemorrhagic_fever",
                  "label": "Viral Hemorrhagic Fever (e.g. Lassa fever)"
                },
                { "value": "other", "label": "Others/specify Fever" }
              ]
            },
            {
              "type": "text",
              "name": "other_disease",
              "label": "5. Other disease/fever (specify)",
              "relevant": "selected(${diseases}, 'other')",
              "inputType": "multiline"
            }
          ]
        },
        {
          "type": "group",
          "name": "step_3_patient_identification",
          "label": "Step 3: Patient Identification",
          "appearance": "field-list",
          "fields": [
            {
              "type": "text",
              "name": "patient_name",
              "label": "6. Name of Patient",
              "required": true
            },
            {
              "type": "date",
              "name": "date_of_birth",
              "label": "7. Date of Birth (DOB)"
            },
            {
              "type": "integer",
              "name": "age_years",
              "label": "8. Age (If DOB unknown) - Years",
              "min": 0
            },
            {
              "type": "integer",
              "name": "age_months",
              "label": "Age (Months if <12)",
              "min": 0,
              "max": 11,
              "relevant": "${age_years} = 0"
            },
            {
              "type": "integer",
              "name": "age_days",
              "label": "Age (Days - NNT only)",
              "min": 0,
              "max": 28
            },
            {
              "type": "select_one",
              "name": "sex",
              "label": "9. Sex",
              "required": true,
              "choices": [
                { "value": "male", "label": "Male" },
                { "value": "female", "label": "Female" }
              ]
            }
          ]
        },
        {
          "type": "group",
          "name": "step_4_patient_address",
          "label": "Step 4: Patient Address",
          "appearance": "field-list",
          "fields": [
            {
              "type": "select_one",
              "name": "address_type",
              "label": "10. Patient's Address Type",
